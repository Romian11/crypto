<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link rel="stylesheet" href="/navbar/css/style.css">
     <link rel="stylesheet" href="/wallet/css/style.css">
     <link rel="stylesheet" href="/addbtn/css/style.css">
     {{>script}}
    <title>Document</title>
</head>
  <style>
    
    /* Optional: Hide the text input styling */ .box { height: 450px !important;
    } #submit_btn { margin-top: 30px !important; }
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button { -webkit-appearance: none;
    margin: 0; }
  </style>

  <script>
    // Get the number input element 
    const numberInput =document.getElementById("myNumberInput"); // Disable the increment and
    numberInput.addEventListener("focus", function () {
    this.addEventListener("keydown", function (event) { if (event.which === 38
    || event.which === 40) { event.preventDefault(); } }); });
  </script>
<body>
<div class="main">
    <div class="top">
        {{>navbar}}
    </div>
    <div class="bottom">
       <div class="head">
        <p class="selected">Wallet <i class="fa fa-credit-card" aria-hidden="true"></i></p>
        <div class="separator"></div>
       </div>

       <div class="user_wallet">
        <div class="info">
        <div class="currbalance">
            <p>Balance Available</p>
           <div class="bal"> <span id="balance"><span id="dollar">$</span> 36000</span></div>
        </div>
        <div class="accounts">
            <div class="invested"><span>Amount Invested</span> <span><span id="dollar2">$</span>15000</span></div>
        <div class="starting_balance"><span>Starting Balance</span><span><span id="dollar2">$</span>14000</span></div>
        </div>
        <div class="profit_loss">
            <div class="starting_balance"><span>Profit/Loss</span> <span><span id="dollar2">$</span>15000</span></div>
        </div>
        </div>
        <div class="deposit_money">
          <div class="money_input">
            <div class="deposit">Deposit</div>
          <div class="deposit_amount">
            <span style="height: fit-content;">Enter Amount</span>
            <span class="money">&nbsp; &nbsp;$&nbsp; &nbsp;<input type="number" name="deposit_amount" id="deposit_amount"></span>
            </div>
            <div class="addbtn">
            {{!-- <button>+500</button>
            <button>+1000</button>
            <button>+5000</button> --}}
<button class="button-18" role="button">+500</button>
<button class="button-18" role="button">+1000</button>
<button class="button-18" role="button">+5000</button>

            </div>
          </div>
           <div class="deposit_btn">
            <button class="button-18" role="button">Deposit</button>

           </div>
        </div>
       </div>
    </div>
</div>
</body>
</html>